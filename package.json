{
  "name": "linkedin-formateur-toolbox",
  "version": "1.0.0",
  "description": "Extension Chrome pour formater du texte directement sur LinkedIn avec une toolbox flottante",
  "main": "background/background.js",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-reload.js",
    "build": "vite build",
    "package": "npm run build && node scripts/package.js",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist build"
  },
  "keywords": [
    "chrome-extension",
    "linkedin",
    "text-formatting",
    "unicode",
    "toolbox"
  ],
  "author": "Sofiane Korbi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sofianekorbi/linkedin-toolbox-formater.git"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.3.1"
  },
  "dependencies": {},
  "manifest": {
    "manifest_version": 3,
    "name": "LinkedIn Formateur Toolbox",
    "version": "1.0.0",
    "description": "Formatez votre texte directement sur LinkedIn avec une toolbox flottante",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "*://*.linkedin.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content/content.js"],
        "css": ["content/content.css"]
      }
    ],
    "background": {
      "service_worker": "background/background.js"
    },
    "icons": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  }
}